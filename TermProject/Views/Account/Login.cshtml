@model TermProject.Models.LoginModel

@{
    ViewData["Title"] = "Login";
}

<div class="text-center my-5">

    <h6 class="display-6">
        <br />
        Login
    </h6>
</div>
<div class="row">
    <div class="col-md-3></div>
    <div class="col-md-6">
        <div>
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>

        <form asp-action="Login" method="post">
            <input type="hidden" asp-for="ReturnUrl" />

            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group my-3">
                <label asp-for="LoginEmail" class="control-label"> Email</label>
                <input asp-for="LoginEmail" class="form-control" />

            </div>

            <div class="form-group my-3">
                <label asp-for="LoginPassword">Password</label>
                <input type="password" asp-for="LoginPassword" class="form-control" />


            </div>
            <div class="form-group my-3 d-flex justify-content-center">
                <button type="submit" value="Login" class="btn btn-primary">
                    <i class="fa-solid fa-user-plus"></i>
                    Login
                </button>
            </div>
        </form>
    </div>
    <div class="col-md-3></div>
</div>
<hr />
<div>
    <a asp-action="Index">Back to List</a>
</div>
<div>
    Don't have an account? Click here for <a asp-action="Register"> registration</a>
</div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
