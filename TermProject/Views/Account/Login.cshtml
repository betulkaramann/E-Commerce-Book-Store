@model TermProject.Models.LoginModel

@{
    ViewData["Title"] = "Login";
}

<div class="text-center mt-1">
    <h6 class="display-3">
        Login Page
    </h6>
</div>

<hr />
<div class="row">
    <div class="col-md-3></div>
    <div class="col-md-10">
        <div asp-validation-summary="All" class="text-danger"></div>

        <form asp-action="Login" method="post">
            <input type ="hidden" asp-for="ReturnUrl"/>

            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group my-2">
                <label asp-for="LoginEmail" class="control-label"> Email</label>
                <input asp-for="LoginEmail" class="form-control" />
                <span asp-validation-for="LoginEmail" class="text-danger"></span>
            </div>
            <div class="form-group my-2">
                <label asp-for="LoginPassword" class="control-label"> Password </label>
                <input asp-for="LoginPassword" class="form-control"  type="password" />
                <span asp-validation-for="LoginPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary"  />
            </div>
        </form>
    </div>
    <div class="col-md-3></div>
</div>
<hr />
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
