@model Book

<!DOCTYPE html>
<html>

<head>
    <title>Book Information</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
</head>

<body>
    <div class="container">
        <hr />
        <div class="row">
            <div class="col-md-4">
                <img src=@Model.ImageUrl class="card-img-top" />
            </div>
            <div class="col-md-8">
                <h3>@Model.Title</h3>
                <p><strong>Yazar:</strong> @Model.Author</p>
                <p><strong>Fiyat:</strong> @Model.Price tl</p>
                <p><strong>Sayfa Sayısı:</strong> @Model.PageCount</p>
                <p><strong>Açıklama:</strong></p>
                <p>@Model.Description</p>
            </div>
            <a class="btn btn-outline-info" asp-controller="Info" asp-action="AddToCard" asp-route-id="@Model.BookId">
                Add Cart
            </a>
        </div>
    </div>
</body>

</html>