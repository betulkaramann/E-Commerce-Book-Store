@model IEnumerable<Book>
@{
    ViewData["Title"] = "Home Page";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Books List</h2>
        </div>
    </div>
    <br /><br />

    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Author
                </th>
                <th>
                    Book Name
                </th>
                <th>
                    Price
                </th>
                <th>
                    Page C
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="50%">
                        @obj.Author
                    </td>
                    <td width="30%">
                        @obj.Title
                    </td>
                    <td width="30%">
                        @obj.Price $
                    </td>
                    <td width="50%">
                        @obj.PageCount
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Products" asp-action="Index" asp-route-id="@obj.BookId"
                                class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i> Sepete Ekle</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>

    </table>
</div>